<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/preview_hit_room_title"
            android:shadowColor="#44000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/etNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/preview_hit_room_notice"
            android:shadowColor="#44000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:background="@drawable/kit_shape_007aff_50"
        android:gravity="center"
        android:text="@string/preview_tip_start_live"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</FrameLayout>